<h1>My basket</h1>
<table>
  <thead>
    <tr class="table_header">
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total netto price</th>
      <th>Total price</th>
    </tr>
  </thead>
  <tbody>
    <% basket.each do |b| %>
      <tr class="table_content">
        <td><%= b[:product].name %></td>
        <td><%= b[:product].price %></td>
        <td><%= b[:quantity] %></td>
        <td><%= b[:total_net_price] %></td>
        <td><%= b[:total_gros_price] %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td>Summary:</td>
      <td><%= basket.map{|x| x[:total_gros_price]}.reduce(:+)%></td>
      </tr>
  </tfoot>
</table>
